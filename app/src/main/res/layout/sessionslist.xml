<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/listlines_margin"
                android:paddingRight="@dimen/listlines_margin"
                tools:context=".Main$PlaceholderFragment"
                android:background="?android:attr/activatedBackgroundIndicator"> <!-- to enable background on selected items-->
        <TextView
            android:id="@+id/ldate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@android:style/TextAppearance.Medium"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/lname"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="end"
            android:textAlignment="textEnd"
            style="@android:style/TextAppearance.Medium"
            android:textAppearance="?android:attr/textAppearanceMedium" />
</RelativeLayout>