<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".Main$PlaceholderFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/listlines_margin"
        android:paddingRight="@dimen/listlines_margin"
        android:descendantFocusability="blocksDescendants"> <!-- needed to make the listview clickable as it has buttons -->
        <TextView
            android:id="@+id/lclicks"
            android:layout_weight=".14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:layout_marginRight="@dimen/listlines_margin"
            android:layout_gravity="center|end"
            style="@android:style/TextAppearance.Medium"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <TextView
            android:id="@+id/lname"
            android:layout_weight=".54"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            style="@android:style/TextAppearance.Medium"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        <Button
            android:id="@+id/badd1"
            android:layout_weight=".20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            style="@android:style/TextAppearance.Medium"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="\?"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:singleLine="true"/>
        <Button
            android:id="@+id/badd2"
            android:layout_weight=".12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            style="@android:style/TextAppearance.Medium"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="+"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:singleLine="true"/>
    </LinearLayout>
</RelativeLayout>