<LinearLayout android:id="@+id/cffoot"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_below="@+id/cftop"
              android:focusable="true"
              android:focusableInTouchMode="true"
              android:orientation="horizontal"
              android:paddingLeft="@dimen/buttons_margin"
              android:paddingRight="@dimen/buttons_margin"
              tools:context=".Main$PlaceholderFragment">

    <ImageButton
        android:id="@+id/baddni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        android:singleLine="true"
        android:src="@drawable/ic_create_black_24dp"/>

    <TextView
        android:id="@+id/lcname"
        style="@android:style/TextAppearance.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingLeft="@dimen/buttons_margin"
        android:singleLine="true"
        android:text="@string/string7"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
</LinearLayout>